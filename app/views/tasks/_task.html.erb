<tr id = "row_<%= task.id %>" class="<%= @class_status %>" > 
  <td width="20">
    <div class="hider">
      <div id="complete_icon_<%= task.id %>">
      <% if task.completed %>
        <%= render 'set_uncomplete', :task => task, :size => "icon-3x" %>
      <% else %> 
        <%= render 'set_complete', :task => task, :size => "icon-3x" %>
      <% end %> 
      </div"            
    <div>  
  </td>
  <td data-toggle="collapse" data-target="#notes<%= task.id %>">
    <h3><%= task.name %> </h3>
  </td>
  <td> 
  </td>
  <td>
    <div class="hider">
    <%= link_to t('.edit', :default => ''),
      edit_task_path(task), :class => "icon-pencil icon-3x" %>
  </div>
  </td>
  <td>
    <div class="hider">
    <%= link_to "", 
      task, 
      method: :delete, 
      data: {confirm: "Sure?"}, 
      :class => "icon-trash icon-3x",
      remote: true %>
    </div>
  </td>
</tr>
<tr id = row_more_<%= task.id %>
<td class="more"></td>
 <td colspan="5" class="more">
   <div id="notes<%= task.id %>" class="collapse">
     <div id="notes_left_panel">
       <%= task.task_start.to_s(:short) if task.task_start %>
       (<%= time_ago_in_words(task.task_start) + " ago" if task.task_start%>)
     </div>
     <div id="notes_contents" >
       <%= task.notes %>
     </div>
     <div id="notes_right_panel">
     </div>
   </div>
 </td>
</td>
</tr>
