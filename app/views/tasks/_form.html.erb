<%= form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
    <%= f.label :task_start, :class => 'control-label' %>
    <div class="controls">
      <div id="datetimepicker1" class="input-append date">
        <input name=[task[task_start]] data-format="dd/MM/yyyy hh:mm" type="text" 
        value="<%= l @task.task_start, :format => :long %>"></input>
        <span class="add-on">
          <i class="icon-time" class="icon-calendar">
          </i>
        </span>
      </div>
    </div>
  <div class="control-group">
    <%= f.label :task_end, :class => 'control-label' %>
    <div class="controls">
      <div id="datetimepicker2" class="input-append date">
        <input name=[task[task_end]] data-format="dd/MM/yyyy hh:mm" type="text"
        value = "<%= l @task.task_end, :format => :long if @task.task_end%>"
        ></input>
        <span class="add-on">
          <i class="icon-time" class="icon-calendar">
          </i>
        </span>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :task_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :task_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :notes, :cols => "100", :rows => "2", :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :completed, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :completed, :class => 'check_box' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tasks_path, :class => 'btn' %>
  </div>
<% end %>
